<Window x:Class="GradeControl.StudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeControl"
        mc:Ignorable="d"
        Title="Schüler" Height="130" Width="250" ResizeMode="CanMinimize" Topmost="True">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="185" Margin="0,20,0,0"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
